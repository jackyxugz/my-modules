<odoo>
    <data>
        <!--继承列表，修改展示名称-->
        <record model="ir.ui.view" id="cust-manage_list2">
            <field name="name">客户列表</field>
            <field name="model">cm.customer</field>
            <field name="inherit_id" ref="cust-manage.list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='cn_comp_name']" position="after">
                    <!--<field name="stage_id"/>-->
                    <field name="stage_id" optional="show" widget="badge" decoration-success="stage_id in('deposit')" decoration-info="stage_id in ('toHK')"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="channel_id"/>
                </xpath>
                <xpath expr="//field[@name='hk_addr_is_change']" position="after">
                    <field name="rent_addr" string="租金" optional="hide"/>
                    <field name="start_time" string="起租时间" optional="hide"/>
                    <field name="br_recieve" string="BR收到时间" optional="hide"/>
                    <field name="br_send" string="BR寄出时间" optional="hide"/>
                </xpath>

            </field>
        </record>
        <!--继承表单，修改展示字段-->
        <record model="ir.ui.view" id="cust_manage_form2">
            <field name="name">customer 表单2</field>
            <field name="model">cm.customer</field>
            <field name="inherit_id" ref="cust-manage.form"/>
            <field name="arch" type="xml">
                <field name="proj_name" position="after">
                    <field name="stage_id"/>
                    <field name="channel_id"/>
                </field>
                <field name="hk_addr_is_change" position="after" >
                    <field name="address_id" string='变更后的地址' attrs="{'invisible': [('hk_addr_is_change', '=', False)]}"/>
                    <field name="rent_addr" attrs="{'invisible': [('hk_addr_is_change', '=', False)]}"/>
                    <field name="start_time" attrs="{'invisible': [('hk_addr_is_change', '=', False)]}"/>
                    <field name="br_recieve" attrs="{'invisible': [('hk_addr_is_change', '=', False)]}"/>
                    <field name="br_send" attrs="{'invisible': [('hk_addr_is_change', '=', False)]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>

